{% extends "AcmeTestBundle::layout.html.twig" %}
{% block body %}

    <div class="container">

        <div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
            <div class="container">
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="{{ path('acme_test_homepage') }}">Home</a></li>
                        <li><a href="{{ path('acme_test_about') }}">About</a></li>
                        <li><a href="{{ path('acme_test_guest') }}">GuestBook</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="container">

            <div class="row row-offcanvas row-offcanvas-right">

                <div class="col-xs-12 col-sm-9">
                    <p class="pull-right visible-xs">
                        <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
                    </p>
                    <div class="jumbotron">
                        <h1>My Site!</h1>
                    </div>

                    <ol class="breadcrumb">
                        <li class="active">Home</li>
                    </ol>
                    {% for post in allpost %}
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <a style="color: black"
                                   href="{{ path('acme_test_homepage_detail' , {'idPost': post.id}) }}"><h1
                                            class="panel-title">{{ post.title }}</h1></a>

                                <div class="row">
                                    <div class="col-md-6">published at {{ post.timePost|date('Y-m-d H:i') }} </div>
                                    <div class="col-md-6 text-right">category: <a style="color: black"
                                                                                  href="#">{{ post.category.title }}</a>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-body">
                                <div>
                                    <img class="img-thumbnail" style="float: left; margin-right: 10px" width="150"
                                         src="http://englishwell.info/uploads/taginator/Nov-2013/image.jpg"/>

                                    <p style="text-align: justify">{{ "%.500s"|format(post.textPost) }}</p>
                                </div>
                                <div class="row">
                                    <div class="col-xs-6"></div>
                                    <div class="col-xs-6 text-right">tags : {% for tags in post.tag %} <a
                                                style="color: black"
                                                href="{{ path('acme_test_homepage_about' , {'tag': tags.textTag}) }}">{{ tags.textTag }}</a> {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                </div>

                {% include 'AcmeTestBundle::Blog/template/mostViewed.html.twig' %}
                {% include 'AcmeTestBundle::Blog/template/lastPostGuestBook.html.twig' %}

            </div>
            <!--/row-->

            <hr>

            <footer>
                <p>&copy; Company 2013</p>
            </footer>

        </div>
        <!--/.container-->


        <!-- Bootstrap core JavaScript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
        <script src="../../dist/js/bootstrap.min.js"></script>
        <script src="offcanvas.js"></script>
    </div>
{% endblock body %}
